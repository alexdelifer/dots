source mailboxes.muttrc

set realname="Alex Delifer"
set sort='reverse-threads'

set use_from=yes                                                                
set ssl_starttls=yes                                                            
set ssl_force_tls=yes  

set editor="nvim"
set rfc2047_parameters = yes                                                    
set sleep_time = 0    # Pause 0 seconds for informational messages              
set markers = no    # Disables the `+` displayed at line wraps                  
set mark_old = no   # Unread mail stay unread until read                        
set mime_forward = yes    # attachments are forwarded with mail                 
set wait_key = no   # mutt won't ask "press key to continue"                    
set fast_reply      # skip to compose when replying                             
set fcc_attach      # save attachments with the body                            
set forward_format = "Fwd: %s"  # format of subject when forwarding             
set forward_quote   # include message in forwards                               
set reverse_name    # reply as whomever it was to                               
set include     # include message in replies  

set sidebar_visible = yes                                                       
set sidebar_width = 20                                                          
set sidebar_short_path = yes                                                    
set sidebar_next_new_wrap = yes                                                 
#set mail_check_stats                                                            
#set sidebar_format = '%B%?F? [%F]?%* %?N?%N/? %?S?%S?'

set mailcap_path = ~/.config/neomutt/mailcap
alternative_order multipart/mixed text/plain text/calendar application/ics text/html
auto_view text/html
auto_view text/calendar
auto_view application/ics
set show_multipart_alternative = "info"

source powerline/colors/gruvbox-powerline.neomuttrc
source powerline/powerline.neomuttrc
macro index O "<shell-escape>offlineimap <enter>" "run offlineimap to sync all mail"

bind pager j next-line
bind pager k previous-line
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry

set collapse_all = no
set uncollapse_new = yes # (default is yes)

# --------------------------------------------------------------------------
# FUNCTIONS – shown with an example mapping
# --------------------------------------------------------------------------
# open a different virtual folder
bind index,pager X change-vfolder
# read entire thread of the current message
bind index,pager + entire-thread
# generate virtual folder from query
bind index,pager \eX vfolder-from-query
# generate virtual folder from query with time window
bind index < vfolder-window-backward
bind index > vfolder-window-forward
# toggle between mailboxes and virtual mailboxes
# bind index,pager ??? sidebar-toggle-virtual
# --------------------------------------------------------------------------
# COMMANDS – shown with an example
# --------------------------------------------------------------------------
# virtual-mailboxes description notmuch-URL { description notmuch-URL ...}

set nm_default_uri = "notmuch:///home/alex/Mail"
set virtual_spoolfile=yes
macro index \\ "<vfolder-from-query>"
bind index,pager + entire-thread
bind index,pager y modify-labels
tag-transforms "attachment" "@" \
               "encrypted"  "" \
               "signed"     "✎" \
               "neomutt-users" "users" \
               "neomutt-devel" "devel" \
               "github-issues" "gh"

subscribe rhsa-announce@redhat.com
#subscribe neomutt-devel@neomutt.org
#subscribe neomutt-users@neomutt.org

set pager_index_lines   = 10    # number of index lines to show
set pager_context       = 3     # number of context lines to show

set mail_check_stats = yes
set sidebar_visible = yes
set sidebar_width = 20
set sidebar_new_mail_only = no
set sidebar_sort_method = 'unsorted'
#set sidebar_format = "%B%* %?N?(%N)? %S"
bind index,pager \CJ sidebar-next
bind index,pager \CK sidebar-prev
bind index,pager \CL sidebar-open
bind index,pager B sidebar-toggle-visible

virtual-mailboxes "INBOX" "notmuch://?query=tag:inbox"
virtual-mailboxes "Unread" "notmuch://?query=tag:unread"
virtual-mailboxes "Sent" "notmuch://?query=tag:sent"
virtual-mailboxes "Work" "notmuch://?query=tag:work"
virtual-mailboxes "Archives" "notmuch://?query=tag:archive"
virtual-mailboxes "2021" "notmuch://?query=tag:2021"
virtual-mailboxes "2020" "notmuch://?query=tag:2020"
virtual-mailboxes "2019" "notmuch://?query=tag:2019"
virtual-mailboxes "2018" "notmuch://?query=tag:2018"
virtual-mailboxes "2017" "notmuch://?query=tag:2017"
virtual-mailboxes "2016" "notmuch://?query=tag:2016"
virtual-mailboxes "2015" "notmuch://?query=tag:2015"
virtual-mailboxes "2014" "notmuch://?query=tag:2014"
virtual-mailboxes "2013" "notmuch://?query=tag:2013"
virtual-mailboxes "2012" "notmuch://?query=tag:2012"
virtual-mailboxes "2011" "notmuch://?query=tag:2011"

